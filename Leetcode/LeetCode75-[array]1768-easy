/**
 * @param {string} word1
 * @param {string} word2
 * @return {string}
 */
var mergeAlternately = function(word1, word2) {
    let words1Array = word1.split('')
     let words2Array = word2.split('')

     console.log(words1Array)
     console.log(words2Array)

     let result =[]
     
    let max = Math.max(words1Array.length ,words2Array.length )
     for(let i=0; i<max ; i++){
        if(words1Array[i]){result.push(words1Array[i])}
        if(words2Array[i]){result.push(words2Array[i])}
     }
     console.log(result)
     return result.join('')
};